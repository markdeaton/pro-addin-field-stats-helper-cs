    <UserControl.Resources>
        <ResourceDictionary>
            <conv:FieldStatDoubleToStringConverter x:Key="statStringToDoubleConverter"/>
            <conv:FieldNullIntToStringConverter x:Key="nullIntToStringConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="true" KeyboardNavigation.TabNavigation="Local" Height="30">
            <TextBlock Grid.Column="1" Text="{Binding Heading}" VerticalAlignment="Center" HorizontalAlignment="Center"
                    FontSize="14">
                <TextBlock.ToolTip>
                    <WrapPanel Orientation="Vertical" MaxWidth="300">
                        <TextBlock Text="{Binding Heading}" TextWrapping="Wrap"/>
                    </WrapPanel>
                </TextBlock.ToolTip>
            </TextBlock>
        </DockPanel>
        <Grid Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Height="25" Margin="5" Command="{Binding RetrieveMapsCommand}"
                    Style="{DynamicResource Esri_SimpleButton}">Get Maps</Button>
            <ComboBox Grid.Row="0" Grid.Column="1" Name="LstMaps" ItemsSource="{Binding ListOfMaps}" 
                     Margin="5" DisplayMemberPath="Name" SelectedItem="{Binding SelectedMap, Mode=TwoWay}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Layers"/>
            <ComboBox x:Name="LstLayers" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                      ItemsSource="{Binding ListOfLayers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedLayer, Mode=TwoWay}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Fields"/>
            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="LstFields" ItemsSource="{Binding ListOfFields}" Margin="5" 
                     DisplayMemberPath="Alias" SelectedItem="{Binding SelectedField, Mode=TwoWay}"/>

            <Label x:Name="label" Grid.Row="3" Grid.Column="0" Content="Min:"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding FieldMin, StringFormat=0.000;;0, Converter={StaticResource statStringToDoubleConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
            <Label Grid.Row="4" Grid.Column="0" Content="Max:"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding FieldMax, StringFormat=0.000;;0, Converter={StaticResource statStringToDoubleConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
            <Label Grid.Row="5" Grid.Column="0" Content="Mean:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding FieldMean, StringFormat=0.000;;0, Converter={StaticResource statStringToDoubleConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
            <Label Grid.Row="6" Grid.Column="0" Content="Median:"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding FieldMedian, StringFormat=0.000;;0, Converter={StaticResource statStringToDoubleConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
            <Label Grid.Row="7" Grid.Column="0" Content="Std Dev:"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding FieldStdDev, StringFormat=0.000;;0, Converter={StaticResource statStringToDoubleConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
            <Label Grid.Row="8" Grid.Column="0" Content="Nulls Ignored:"/>
            <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding FieldNulls, StringFormat=0;, Converter={StaticResource nullIntToStringConverter}}" IsReadOnly="True" Margin="5,0" BorderThickness="0" MaxLines="1"/>
        </Grid>
        <chartingToolkit:Chart
            Grid.Row="2" Grid.Column="0"          
            Margin="2, 2, 2, 2" Name="chtHistogram" 
            Height="320" Width="275"
            Title="Histogram">
            <chartingToolkit:Chart.Axes>
                <chartingToolkit:LinearAxis Orientation="X"></chartingToolkit:LinearAxis>
                <chartingToolkit:LinearAxis Orientation="Y"></chartingToolkit:LinearAxis>
            </chartingToolkit:Chart.Axes>

            <chartingToolkit:ColumnSeries x:Name="columnSeriesHistogram" IndependentValuePath="Key" DependentValuePath="Value" ItemsSource="{Binding Path=ChartData}"/>

            <chartingToolkit:Chart.LegendStyle>
                <Style TargetType="datavis:Legend">
                    <Setter Property="Width" Value="0"/>
                </Style>
            </chartingToolkit:Chart.LegendStyle>
        </chartingToolkit:Chart>
    </Grid>
</UserControl>
